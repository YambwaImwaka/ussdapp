<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for SMS -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- Permission to make phone calls (required for USSD dial) -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!-- Permission for reading SIM card information (for selecting SIM) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Permission for posting notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" 
        tools:targetApi="33" />

    <!-- Permissions for optimized app operation -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UssdApp"
        tools:targetApi="31">

        <!-- Main Activity Declaration -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UssdApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SMS Receiver Declaration -->
        <receiver 
            android:name=".SmsReceiver" 
            android:exported="false">
            <intent-filter android:priority="100">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        
    </application>
</manifest>